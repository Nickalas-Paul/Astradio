{
  "name": "astradio",
  "version": "1.0.0",
  "description": "AI-powered astrological music generator",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "cd apps/api && npm run dev",
    "dev:web": "cd apps/web && npm run dev"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.4.2",
    "ts-node": "^10.9.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
