{
  "name": "astradio",
  "version": "1.0.0",
  "description": "AI-powered astrological music generator",
  "private": true,
  "packageManager": "pnpm@8.15.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm --filter api dev\" \"pnpm --filter web dev\"",
    "build": "pnpm --filter shared build && pnpm --filter astro-core build && pnpm --filter api build && pnpm --filter web build",
    "test": "node scripts/smoke.js",
    "deploy:api": "node scripts/renderDeploy.js"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "10.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.4.2"
  },
  "engines": {
    "node": ">=20"
  }
}
