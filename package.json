{
  "name": "astradio-monorepo",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.18 <=22.x"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm -r test",
    "guard:deps": "tsx tools/guard-deps.ts",
    "verify": "pnpm lint && pnpm typecheck && pnpm guard:deps && pnpm test",
    "lighthouse": "lhci autorun",
    "analyze": "ANALYZE=true pnpm -F @astradio/web build",
    "smoke": "pwsh scripts/smoke.ps1",
    "rollback": "pwsh scripts/rollback.ps1",
    "load-test": "k6 run -e API=$NEXT_PUBLIC_API_URL scripts/load.js"
  },
  "devDependencies": {
    "@eslint/js": "9.33.0",
    "@lhci/cli": "0.15.1",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "9.1.7",
    "tsx": "^4.16.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "swisseph-wasm": "0.0.2"
  }
}
