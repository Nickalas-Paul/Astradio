{
  "name": "@astradio/api",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "lint": "pnpm exec eslint . --ext .ts,.tsx --max-warnings=0",
    "typecheck": "tsc -p tsconfig.json --noEmit --pretty false",
    "test": "jest",
    "test:watch": "jest --watch",
    "prestart": "node -e \"process.exit(require('fs').existsSync('dist')?0:1)\" || pnpm build"
  },
  "dependencies": {
    "@astradio/core": "workspace:*",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "@types/express": "^4.17.21",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4"
  }
}
