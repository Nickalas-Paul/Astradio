{
  "version": 2,
  "name": "astradio",
  "builds": [
    {
      "src": "apps/web/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "apps/api/src/app.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "apps/api/src/app.ts"
    },
    {
      "src": "/(.*)",
      "dest": "apps/web/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "apps/api/src/app.ts": {
      "maxDuration": 30
    }
  },
  "regions": ["iad1"],
  "public": true,
  "github": {
    "enabled": true,
    "silent": true
  }
} 